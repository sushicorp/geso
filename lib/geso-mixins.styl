@import "nib"

/* -------------------- */
/* Animations           */
/* -------------------- */

@keyframes pop
  0%
    opacity:0
    transform:scale(.5)
  50%
    opacity:1
    transform:scale(1.1)
  100%
    opacity:1
    transform:scale(1)

/* https://github.com/slang800/animate-stylus */
@keyframes flipInX
  0%
    transform: perspective(400px) rotateX(90deg)
    opacity: 0
  40%
    transform: perspective(400px) rotateX(-10deg)
  70%
    transform: perspective(400px) rotateX(5deg)
  100%
    transform: perspective(400px) rotateX(0deg)
    opacity: 1
    
@keyframes flipOutX
  0%
    transform: perspective(400px) rotateX(0deg)
    opacity: 1

  100%
    transform: perspective(400px) rotateX(90deg)
    opacity: 0

/* -------------------- */
/* Buttons              */
/* -------------------- */


geso-button($btn-bg)
  display inline-block
  padding 6px 12px
  font-size 0.85rem
  color #333
  cursor pointer
  background-image linear-gradient($btn-bg, darken($btn-bg, 10%))
  border 1px solid #ccc
  border-radius 3px
  user-select none
  text-decoration none
  &:focus 
    outline none
  &:hover,
  &:active
    background-image linear-gradient(darken($btn-bg, 3%), darken($btn-bg, 13%))
    border-color #aaa
  &:active,
  &.selected
    background-color darken($btn-bg, 13%)
    background-image none
    border-color #aaa
    box-shadow inset 0 2px 4px rgba(0, 0, 0, 0.15)
  &:disabled,
  &.disabled 
    &,
    &:hover 
      color rgba(102, 102, 102, 0.5)
      cursor default
      background-color rgba(229, 229, 229, 0.5)
      background-image none
      border-color rgba(197, 197, 197, 0.5)

box-center()
  position relative
  top 50%
  transform translateY(-50%)

child-center()
  display flex
  align-items center
  justify-content center
