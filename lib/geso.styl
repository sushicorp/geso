@import "geso-mixins"

$link-color=#3DA01D
$button-color=#fcfcfc
$button-color-primary=#D5F49F
$theme-color=#343434

.btn
  geso-button($button-color)

.btn-primary
  font-weight bold
  geso-button($button-color-primary)

body
  font-family Helvetica, Arial, 'Hiragino Kaku Gothic Pro', Meiryo, 'MS PGothic', sans-serif
  color #555
  font-size 16px
  reset-body()
  margin 0
  padding 0

.hero
  background $theme-color
  height 300px
  color white
  child-center()

.container
  width 720px
  margin 0 auto

.box-center
  box-center()
  color white
  text-align center

.entry-content
  line-height 1.8
  font-size 1.1rem

.entry-title
  margin 0
  padding 10px 0 20px
  line-height 1.3
  font-size 2.1rem
  border-bottom 1px solid #cccccc

.card
  min-height 200px
  padding 20px
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)
  border-radius 4px
  margin-bottom 40px

.h1
  font-size 3rem
  text-align center
  

.footer
  background-color $theme-color
  text-align left
  color #EEE
  padding 2em 0


a
  color $link-color
  transition all .2s
  text-decoration none
  &:hover
    color lighten($link-color, 40%)

p
  line-height 1.6