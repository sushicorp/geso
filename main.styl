@import "nib"

box-center()
  position relative
  top 50%
  color white
  transform translateY(-50%)

.container
  width 720px
  margin 0 auto

.outer
  height: 200px
  border-radius 10px
  background gray

.box-center
  box-center()
  text-align center

body
  font-family Helvetica, Arial, 'Hiragino Kaku Gothic Pro', Meiryo, 'MS PGothic', sans-serif
  color #4d4d4d
  font-size 16px

.entry-content
  line-height 1.8
  font-size 1.1rem

.entry-title
  margin 0
  padding 10px 0 20px
  line-height 1.3
  font-size 2.1rem
  border-bottom 1px solid #cccccc

.card
  min-height 200px
  padding 20px
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)
  border-radius 4px

.h1
  font-size: 3rem
  text-align: center


$btn-bg=#fcfcfc

.btn{
  display inline-block
  padding 6px 12px
  font-size 0.85rem
  color #333
  cursor pointer
  background-image linear-gradient($btn-bg, darken($btn-bg, 10%))
  border 1px solid #ccc
  border-radius 3px
  user-select none
  text-decoration none
  &:focus {
    outline none;
  }
  &:hover,
  &:active{
    background-image linear-gradient(darken($btn-bg, 3%), darken($btn-bg, 13%));
    border-color #aaa;
  }
  &:active,
  &.selected{
    background-color darken($btn-bg, 13%);
    background-image none;
    border-color #aaa;
    box-shadow inset 0 2px 4px rgba(0, 0, 0, 0.15);
  }

  &:disabled,
  &.disabled {
    &,
    &:hover {
      color: rgba(102, 102, 102, 0.5);
      cursor: default;
      background-color: rgba(229, 229, 229, 0.5);
      background-image: none;
      border-color: rgba(197, 197, 197, 0.5);
    }
  }
}

 .ghost-button {
